<configuration xmlns="hybris.de/schemas/hmc/generic"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="hybris.de/schemas/hmc/generic hmc.xsd">
	<type name="CarrierZoneDeliveryModeValue" icon="images/icons/e_deliverymodevalue.gif"
		mode="append">
		<organizer>
			<search mode="replace">
				<condition attribute="zone" />
				<condition attribute="weightRange" />
			</search>
			<result>
				<listview mode="replace">
					<itemlayout>
						<attribute name="deliverymode" width="100" />
						<attribute name="zone" width="100" />
						<attribute name="weightRange" width="100" />
						<attribute name="minimum" width="140" />
						<attribute name="value" width="100" />
						<attribute name="currency" width="100" />
					</itemlayout>
				</listview>
				<editview mode="replace">
					<itemlayout>
						<attribute name="deliverymode" width="100" />
						<attribute name="zone" width="100" />
						<attribute name="weightRange" width="100" />
						<attribute name="minimum" width="140" />
						<attribute name="value" width="100" />
						<attribute name="currency" width="100" />
					</itemlayout>
				</editview>
				<treeview mode="replace">
					<itemlayout>
						<attribute name="zone" />
						<attribute name="weightRange" />
					</itemlayout>
				</treeview>
			</result>
			<editor mode="replace">
				<essentials>
					<listlayout>
						<attribute name="deliverymode" />
					</listlayout>
				</essentials>
				<tab name="properties">
					<section name="properties">
						<listlayout>
							<attribute name="zone" />
							<attribute name="weightRange" />
							<attribute name="minimum" />
							<attribute name="value" />
							<attribute name="currency" />
						</listlayout>
					</section>
				</tab>
				<tabref idref="tab_administration" />
			</editor>
		</organizer>
		<defaultreference mode="replace">
			<itemlayout>
				<attribute name="zone" />
				<attribute name="weightRange" />
			</itemlayout>
		</defaultreference>
	</type>
</configuration>