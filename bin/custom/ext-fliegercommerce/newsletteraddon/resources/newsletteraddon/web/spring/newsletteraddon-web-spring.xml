<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
           http://www.springframework.org/schema/aop
           http://www.springframework.org/schema/aop/spring-aop-3.1.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.1.xsd">

	<context:component-scan base-package="com.fliegersoftware.addons.newsletteraddon.controllers" scope-resolver="de.hybris.platform.spring.IgnoreTenantScopeMetadataResolver" />


	<!-- Newsletter Subscription Management -->	
	<bean id="newsletterSubscriptionManagementParagraphComponentRenderer"   
	          class="com.fliegersoftware.addons.newsletteraddon.component.renderer.NewsletterSubscriptionManagementParagraphComponentRenderer"
	          parent="addOnJspIncludeCMSComponentRenderer">
	        <property name="cmsComponentService" ref="cmsComponentService" />
	        <property name="modelService" ref="modelService" />
	        <property name="baseStoreService" ref="baseStoreService" />
	        <property name="customerFacade" ref="customerFacade" />
   </bean>
	     
	<bean id="newsletterSubscriptionManagementParagraphComponentRendererMapping" parent="addonCmsComponentRendererMapping">
	        <property name="typeCode" value="NewsletterSubscriptionManagementParagraphComponent" />
	        <property name="renderer" ref="newsletterSubscriptionManagementParagraphComponentRenderer" />
	</bean>
	
	
	<!-- Newsletter Subscription Form -->
<!-- 	<alias name="newsletterSubscriptionFormParagraphComponentRenderer" alias="newsletterSubscriptionFormParagraphComponentRenderer" /> -->
	<bean id="newsletterSubscriptionFormParagraphComponentRenderer" 
			class="com.fliegersoftware.addons.newsletteraddon.component.renderer.NewsletterSubscriptionFormParagraphComponentRenderer"
	         parent="addOnJspIncludeCMSComponentRenderer" > 
	         <property name="userFacade" ref="userFacade" />
	         <property name="typeService" ref="typeService" />
	         <property name="cmsComponentService" ref="cmsComponentService" />
	         <property name="modelService" ref="modelService" />
	</bean>
	     
	<bean id="newsletterSubscriptionFormParagraphComponentRendererMapping" parent="addonCmsComponentRendererMapping">
	        <property name="typeCode" value="NewsletterSubscriptionFormParagraphComponent" />
	        <property name="renderer" ref="newsletterSubscriptionFormParagraphComponentRenderer" />
	</bean>
	
	
	<!-- Controller -->
	<bean id="newsletterSubscriptionAddOnController" class="com.fliegersoftware.addons.newsletteraddon.controllers.cms.NewsletterSubscriptionAddOnController">
		<property name="newsletterSubscriptionFacade" ref="newsletterSubscriptionFacade" />
		<property name="i18nService" ref="i18nService" />
		<property name="userService" ref="userService" />
		<property name="customerFacade" ref="customerFacade" />
	</bean>
	


</beans>
