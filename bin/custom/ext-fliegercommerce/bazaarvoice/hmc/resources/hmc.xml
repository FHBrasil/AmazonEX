<configuration xmlns="hybris.de/schemas/hmc/generic"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="hybris.de/schemas/hmc/generic hmc.xsd">


	<!-- Configuration for extension bazaarvoice -->

	<!-- <explorertree> <group name="bazaarvoicegroup"> <externalnode classname="bazaarvoice.hmc.BazaarvoiceTreeLeafChip"/> 
		</group> </explorertree> -->

	<explorertree>
		<group name="bazaarvoicegroup">
			<typeref type="BazaarvoiceConfig" />
			<typeref type="BazaarvoiceProductFeedExportCronJob" />
			<!-- <externalnode classname="com.hybris.paypal.hmc.PaypalTreeLeafChip"/> -->
		</group>
	</explorertree>



	<type name="BazaarvoiceConfig" mode="append">
		<organizer>
			<search mode="replace">
				<condition attribute="code" />
				<condition attribute="productCatalog" />
				<condition attribute="clientName" />
				<condition attribute="ftpServer" />
				<condition attribute="environment" />
				 <condition attribute="licenseAccepted" />
			</search>
			<result>
				<listview mode="replace">
					<itemlayout>
						<attribute name="code" width="200" />
						<attribute name="productCatalog" width="200" />
						<attribute name="clientName" width="200" />
						<attribute name="ftpServer" width="200" />
						<attribute name="environment" width="200" />
						 <attribute name="licenseAccepted" width="100" />
					</itemlayout>
				</listview>
			</result>
			<editor>
				<essentials>
					<listlayout>
						<attribute name="code" />
						<attribute name="extensionVersion" />
						<attribute name="productCatalog" />
						<attribute name="clientName" />
						<attribute name="ftpUserName" />
						<attribute name="ftpPassword" />
						<attribute name="ftpServer" />
						<attribute name="zone" />
						<attribute name="seoKey" />
						<attribute name="environment" />
						<attribute name="showReviewsScript" />
						<attribute name="showQuestionsScript" />
						<attribute name="isFamiliesEnabled" />
                        <attribute name="upcMethodName" />
						 <attribute name="licenseAccepted" /> 
					</listlayout>
				</essentials>
				<tab name="bazaarvoicegroup">
					<section name="bazaarvoicegroup">
						<listlayout>
							<attribute name="code" />
							<attribute name="productCatalog" />
							<attribute name="clientName" />
						</listlayout>
					</section>
				</tab>
			</editor>
		</organizer>
		<defaultreference searchattribute="name" mode="replace">
			<itemlayout>
				<attribute name="code" />
			</itemlayout>
		</defaultreference>
	</type>
	<type name="BazaarvoiceProductFeedExportCronJob" mode="append">
		<organizer>
			<search mode="replace">
				<condition attribute="code" />
				<condition attribute="bazaarvoiceStorefront" />
			</search>
			<result>
				<listview mode="replace">
					<itemlayout>
						<attribute name="code" width="200"/>
						<attribute name="bazaarvoiceStorefront" width="200"/>
					</itemlayout>
				</listview>
			</result>
			<editor>
				<essentials>
					<listlayout>
						<attribute name="code" />
					</listlayout>
				</essentials>
				<tab name="bazaarvoicegroup">
					<section name="bazaarvoicegroup">
						<listlayout>
							<attribute name="code" />
							<attribute name="bazaarvoiceStorefront" />
						</listlayout>
					</section>
				</tab>
			</editor>
		</organizer>
	</type>

	<type name="CMSSite" mode="append" icon="images/cms2/cmssite.gif">
		<organizer mode="append">
			<search mode="append" autoperform="true">
				<condition attribute="bvConfig" operator="contains" />
			</search>
			<result defaultview="list" mode="append">
				<listview mode="append" scrollbar="true">
					<itemlayout mode="append">
					<attribute name="contentCatalogs" width="200"  mode="replace"/>
						<attribute name="bvConfig" width="100" />
					</itemlayout>
				</listview>
			</result>
			<editor mode="append">
				<!-- <essentials> <listlayout> <attribute name="bvConfig" /> </listlayout> 
					</essentials> -->

				<tab name="properties" position="0" mode="append">
					<section name="section.cmssite.bvConfigurationSection"
						mode="append">
						<listlayout>
							<attribute name="bvConfig" width="200" />
							<attribute name="bvLocale" width="100" />
						</listlayout>
					</section>
				</tab>
			</editor>
		</organizer>

	</type>
</configuration>
