		<typegroup name="newsletter">
			<itemtype code="NewsletterSubscriber" autocreate="true" generate="true" jaloclass="com.flieger.jalo.NewsletterSubscriber">
				<deployment table="NewsletterSubscriber" typecode="10002"/>
				<attributes>
					<attribute qualifier="name" type="java.lang.String">
						<persistence type="property" />
					</attribute>
					<attribute qualifier="email" type="java.lang.String">
						<persistence type="property" />
					</attribute>
					<attribute qualifier="gender" type="Gender">
						<persistence type="property" />
					</attribute>
					<attribute type="BaseStore" qualifier="baseStore">
						<persistence type="property" />
					</attribute>
					<attribute qualifier="registered" type="java.lang.Boolean">
						<persistence type="property" />
						<defaultvalue>Boolean.valueOf(false)</defaultvalue>
					</attribute>
					<attribute qualifier="receive" type="java.lang.Boolean">
						<persistence type="property" />
						<defaultvalue>Boolean.valueOf(true)</defaultvalue>
					</attribute>
				</attributes>
			</itemtype>		
		</typegroup>
		<typegroup name="Customer">
			<itemtype code="Customer" autocreate="false" generate="false">
				<attributes>
					<attribute qualifier="newsletterSubscription" type="NewsletterSubscriber">
						<persistence type="property" />
					</attribute>
				</attributes>
			</itemtype>
			
			<itemtype generate="true"
		           code="SyncNewsletterJob"
		           jaloclass="com.flieger.newsletter.job.SyncNewsletterJob"
		           extends="CronJob"
		           autocreate="true">
			</itemtype>
		</typegroup>
	
	</itemtypes>
	
	
