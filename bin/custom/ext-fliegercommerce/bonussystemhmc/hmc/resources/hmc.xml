<configuration xmlns="hybris.de/schemas/hmc/generic"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="hybris.de/schemas/hmc/generic hmc.xsd">
	<!-- Configuration for extension bonussystem -->
	<explorertree>
		<group name="bonussystem">
			<typeref type="BonusSystemConfig"/>
			<typeref type="BonusSystem"/>
		</group>
	</explorertree>
	<type name="Customer" mode="append">
      <organizer>
         <editor>
            <tab name="bonussystem" id="tab_bonussystem" position="1">
               <section name="bonussystem">
                  <listlayout>                  
                     <attribute name="bonussystem" width="595"/>
                  </listlayout>
               </section>
            </tab>
         </editor>
      </organizer>
   </type>
   <type name="BonusSystem" mode="append">
      <organizer>
         <editor>
            <tab name="changebonussystem" id="tab_changebonussystem" position="1">
               <section name="edit">
                  <listlayout>                     
                     <attribute name="logEntries">
						<referencecollectioneditor presetattribute="bonusSystem" autoperform="true" externalcreate="false" editable="true" resortable="true" add="true" remove="true" create="true">
                           <itemlayout>
                              <attribute name="date" width="140"/>
                              <attribute name="type" width="140"/>
                              <attribute name="description" width="140"/>
                              <attribute name="reference" width="140"/>
                              <attribute name="points" width="50"/>
                           </itemlayout>
                        </referencecollectioneditor>
                     </attribute>                     
                     <attribute name="availablePoints" editable="false"/>
                  </listlayout>
               </section>
            </tab>
         </editor>
      </organizer>
   </type>
</configuration>