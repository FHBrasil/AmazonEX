<items 	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="items.xsd">
	<relations>
		<relation code="BonusSystem2EntriesRelation" localized="false" generate="true" autocreate="true">
			<sourceElement type="BonusSystem" qualifier="bonusSystem" cardinality="one">
				<modifiers read="true" write="false" initial="true" optional="false" search="true" unique="false"/>
			</sourceElement>
			<targetElement type="BonusSystemEntry" qualifier="logEntries" cardinality="many" ordered="false" collectiontype="list">
				<modifiers read="true" write="true" optional="true" search="true" partof="true"/>
			</targetElement>
		</relation>
		<relation code="BonusSystem2ConfigRelation" localized="false" generate="true" autocreate="true">
			<sourceElement type="BonusSystemConfig" qualifier="configuration" cardinality="one">
				<modifiers read="true" write="true" initial="true" optional="false" search="true" unique="false"/>
			</sourceElement>
			<targetElement type="BonusSystem" qualifier="bonusSystems" cardinality="many" ordered="false" collectiontype="list">
				<modifiers read="true" write="false" optional="true" search="true" partof="true"/>
			</targetElement>
		</relation>
	</relations>
	<itemtypes>
		<typegroup name="bonussystem">
			<itemtype code="BonusSystem" jaloclass="com.flieger.jalo.user.BonusSystem">
				<deployment table="BonusSystem" typecode="10000"/>
				<attributes>
					<attribute qualifier="availablePoints" type="java.lang.Double">
						<description>The available points of the user.</description>
						<persistence type="dynamic" attributeHandler="bonusSystemAvailablePointsAttributeHandler"/>
					</attribute>
					<attribute qualifier="reservedPoints" type="java.lang.Double">
						<description>The reserved points of the user.</description>
						<persistence type="property"/>
					</attribute>
				</attributes>
			</itemtype>
			<itemtype code="BonusSystemEntry" jaloclass="com.flieger.jalo.user.BonusSystemEntry">
				<deployment table="BonusSystemEntry" typecode="10001"/>
				<attributes>
					<attribute qualifier="date" type="java.util.Date">
						<description> The date of the log entry. </description>
						<persistence type="property"/>
					</attribute>
					<attribute qualifier="points" type="java.lang.Double">
						<description> The points that are moved for the protocol entry. </description>
						<persistence type="property"/>
					</attribute>
					<attribute qualifier="description" type="java.lang.String">
						<description> The description of the log entry. </description>
						<persistence type="property"/>
					</attribute>
					<attribute qualifier="type" type="java.lang.String">
						<description> A type, which specifies the type of bonus. For example register, order, evaluation. </description>
						<persistence type="property"/>
					</attribute>
					<attribute qualifier="reference" type="java.lang.String">
						<description>A reference to a item.</description>
						<persistence type="property"/>
					</attribute>
					<attribute qualifier="appliedDiscount" type="BonusSystemDiscount">
						<description>A discount applied to this entry.</description>
						<persistence type="property"/>
					</attribute>
				</attributes>
			</itemtype>
			<itemtype code="BonusSystemConfig" jaloclass="com.flieger.jalo.user.BonusSystemConfig">
				<attributes>
					<attribute qualifier="multiplier" type="java.lang.Double">
						<description>Conversion rate of payed amount into Bonus Points</description>
						<persistence type="property"/>
					</attribute>
					<attribute qualifier="code" type="java.lang.String">
						<description>Bonus system identifier</description>
						<persistence type="property"/>
					</attribute>
					<!--<attribute qualifier="pointsExpirationInDays" type="java.lang.Integer">
						<description>Bonus Points expiration in days</description>
						<persistence type="property"/>
					</attribute>-->
				</attributes>
			</itemtype>
			<itemtype code="BonusSystemDiscount" jaloclass="com.flieger.jalo.user.BonusSystemDiscount" extends="Discount">
				
			</itemtype>
		</typegroup>
		<typegroup name="Customer">
			<itemtype code="Customer" autocreate="false" generate="false">
				<description>Extending Customer type with additional attributes.</description>
				<attributes>
					<attribute qualifier="bonusSystem" type="BonusSystem" >
						<description> The bonus system for the user. </description>
						<persistence type="property" />
					</attribute>
				</attributes>
			</itemtype>
		</typegroup>
	</itemtypes>
</items>