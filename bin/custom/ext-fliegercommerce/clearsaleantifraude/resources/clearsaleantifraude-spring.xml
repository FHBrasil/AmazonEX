	</bean>
	
	<alias alias="clearSaleFraudServiceProvider" name="clearSaleFraudServiceProvider" />
	<bean id="clearSaleFraudServiceProvider"
		class="com.flieger.clearsale.serviceprovider.ClearSaleFraudServiceProvider"
		scope="tenant">
		<property name="providerName" value="ClearSale" />
<!-- 		<property name="defaultClearSaleSOAPServices" ref="defaultClearSaleSOAPServices"/> -->
<!-- 		<property name="modelService" ref="modelService"/> -->
<!-- 		<property name="commonI18NService" ref="commonI18NService"/> -->
	</bean>
	
	<alias alias="fraudService" name="defaultFraudService" />
	<bean id="defaultFraudService" class="de.hybris.platform.fraud.impl.DefaultFraudService"
		scope="tenant">
		<property name="providers">
			<list merge="true">
				<ref bean="clearSaleFraudServiceProvider" />
			</list>
		</property>
	</bean>
	
<!-- 	Cronjob de pesquisa de status no clearsale	 -->
	<bean id="clearsaleStatusPerformable" class="com.flieger.clearsale.jobs.ClearsaleStatusPerformable" parent="abstractJobPerformable">
		<property name="providerName" value="ClearSale" />
<!-- 		<property name="defaultClearSaleSOAPServices" ref="defaultClearSaleSOAPServices"/> -->
		<property name="modelService" ref="modelService"/>
	</bean>
	
	<!-- VALIDATOR -->
	<alias alias="orderValueValidator" name="completeOrderValueValidator"/>
	<bean id="completeOrderValueValidator" class="com.flieger.clearsale.order.interceptors.CompleteOrderValueValidator">
		<property name="modelService" ref="modelService"/>
		<property name="customerAccountService" ref="customerAccountService"/>
		<property name="commonI18NService" ref="commonI18NService"/>
		<property name="flexibleSearchService" ref="flexibleSearchService"/>
		<property name="paymentProvider" value="Adyen"/>
	</bean>
	
	<bean id="completeOrderValueValidatorMapping" class="de.hybris.platform.servicelayer.interceptor.impl.InterceptorMapping">
		<property name="interceptor" ref="completeOrderValueValidator"/>
		<property name="typeCode" value="Order"/>
	</bean>
