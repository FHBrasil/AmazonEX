<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
           http://www.springframework.org/schema/aop
           http://www.springframework.org/schema/aop/spring-aop-3.1.xsd">

	<!-- Feed template -->
	<bean id="allProductsTemplate" scope="prototype" class="br.flieger.storecatalogfeed.xml.template.AllProductsFromCatalogTemplate" />
	<bean id="baseProductsTemplate" scope="prototype" class="br.flieger.storecatalogfeed.xml.template.BaseProductsFromCatalogTemplate" />

	<!-- Threads for feed generation -->
	<bean id="partialFeedGeneratorThread" scope="prototype" class="br.flieger.storecatalogfeed.core.PartialFeedGeneratorThread" />

	<bean id="feedAggregatorThread" scope="prototype"  class="br.flieger.storecatalogfeed.core.FeedAggregatorThread" />

	<bean id="fullFeedGeneratorThread" scope="prototype" class="br.flieger.storecatalogfeed.core.FullFeedGeneratorThread">
		<lookup-method name="createPartialFeedGeneratorThread" bean="partialFeedGeneratorThread"/>
		<lookup-method name="createFeedAggregatorThread" bean="feedAggregatorThread"/>
	</bean>

	<!-- Performable job -->
	<bean id="exportStoreFeedJobPerformable" class="br.flieger.storecatalogfeed.job.ExportStoreFeedJobPerformable" parent="abstractJobPerformable">
		<lookup-method name="createFullFeedGeneratorThread" bean="fullFeedGeneratorThread"/>
	</bean>

	<!-- DAO -->
	<bean id="storeFeedDao" class="br.flieger.storecatalogfeed.dao.DefaultStoreFeedDao" parent="abstractItemDao" />
</beans>