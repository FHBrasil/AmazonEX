<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:int="http://www.springframework.org/schema/integration"
	xmlns:file="http://www.springframework.org/schema/integration/file"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/integration http://www.springframework.org/schema/integration/spring-integration.xsd 
		http://www.springframework.org/schema/integration/file http://www.springframework.org/schema/integration/file/spring-integration-file.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!-- Service activator -->
	<!-- just changed the default channel to output to mediaImportationHeader -->
	<int:service-activator input-channel="mediaImportationHeaderInit" output-channel="mediaImportationHeader" ref="headerInitTask" method="execute" />
	
	<!-- custom transformation task to setup the header values -->
	<int:service-activator input-channel="mediaImportationHeader" output-channel="batchFilesTran" ref="mediaImportationTransformerTask" method="execute" />
	<bean id="mediaImportationTransformerTask" parent="batchTransformerTask" 
		  class="com.fliegersoftware.media.batch.task.MediaImportationImpexTransformerTask" 
		  init-method="initConvertersMap">
		<property name="fieldSeparator" value=";" />
	</bean>
	
	<bean id="fileOrderComparator" class="de.hybris.platform.acceleratorservices.dataimport.batch.FileOrderComparator">
		<property name="prefixPriority">
			<map merge="true">
				<entry key="base_product" value="10" />
				<entry key="variant" value="9" />
				<entry key="mediaimportation-medias" value="8" />
				<entry key="mediaimportation-container" value="7" />
			</map>
		</property>
	</bean>
	
	<!-- Transformer converters mappings -->
	<!--  -->
	<!-- converter used to import Media items  -->
	<bean id="batchImportationMediaConverterMapping" 
		  class="de.hybris.platform.acceleratorservices.dataimport.batch.converter.mapping.impl.DefaultConverterMapping" 
		  p:mapping="mediaimportation-medias" 
		  p:converter-ref="batchImportationMediaConverter"/>

	<!-- converter used to import MediaContainer items  -->
 	<bean id="batchImportationMediaContainerConverterMapping" 
		  class="de.hybris.platform.acceleratorservices.dataimport.batch.converter.mapping.impl.DefaultConverterMapping" 
		  p:mapping="mediaimportation-container" 
		  p:converter-ref="batchImportationMediaContainerConverter"/>

	<!-- converter used to import values to the galleryImages of the Product items  -->
 	<bean id="batchImportationProductGalleryConverterMapping" 
		  class="de.hybris.platform.acceleratorservices.dataimport.batch.converter.mapping.impl.DefaultConverterMapping" 
		  p:mapping="mediaimportation-container" 
		  p:converter-ref="batchImportationProductGalleryConverter"/>

	<bean id="batchImportationMediaConverter" class="de.hybris.platform.acceleratorservices.dataimport.batch.converter.impl.DefaultImpexConverter">
		<property name="header">
			<value>
				$contentCV=catalogversion(catalog(id[default='$CONTENT_CATALOG$']),version[default='$CONTENT_CATALOG_VERSION$'])
				$mediaResource=$MEDIA_RESOURCE$
				$mime=mime[default='$MIME$'];
				$folder=folder(qualifier)[default='$FOLDER$']
				INSERT_UPDATE Media;code[unique=true];$contentCV[unique=true];realfilename;mediaFormat(qualifier);@media[translator=de.hybris.platform.impex.jalo.media.MediaDataTranslator];$mime;$folder
			</value>
		</property>
		<property name="impexRow">
			<value>
				;{+0};;{+0};{+1};$mediaResource/{+0};;
			</value>
		</property>
	</bean>
	
	<bean id="batchImportationMediaContainerConverter" class="de.hybris.platform.acceleratorservices.dataimport.batch.converter.impl.DefaultImpexConverter">
		<property name="header">
			<value>
				$contentCV=catalogversion(catalog(id[default='$CONTENT_CATALOG$']),version[default='$CONTENT_CATALOG_VERSION$'])
				$medias=medias(code,$contentCV)
				$conversionGroup=conversionGroup(code)[default='$CONVERSION_GROUP$']
				$processor=[processor=com.fliegersoftware.media.impex.processors.MediaContainerMultiThreadedImportProcessor]
				$qualifier=qualifier[unique=true,cellDecorator=com.fliegersoftware.media.impex.translators.MediaContainerQualifierDecorator]
				INSERT_UPDATE MediaContainer$processor;$qualifier;$medias;$contentCV[unique=true];$conversionGroup
			</value>
		</property>
		<property name="impexRow">
			<value>;{+1};{+1};;</value>
		</property>
	</bean>
	
	<bean id="batchImportationProductGalleryConverter" class="de.hybris.platform.acceleratorservices.dataimport.batch.converter.impl.DefaultImpexConverter">
		<property name="header">
			<value>
				$contentCV=catalogversion(catalog(id[default='$CONTENT_CATALOG$']),version[default='$CONTENT_CATALOG_VERSION$'])
				$productCV=catalogversion(catalog(id[default='$PRODUCT_CATALOG$']),version[default='$PRODUCT_CATALOG_VERSION$'])
				$galleryImages=galleryImages(qualifier,$contentCV)[mode=append,cellDecorator=com.fliegersoftware.media.impex.translators.MediaContainerQualifierDecorator]
				UPDATE Product;code[unique=true];$productCV[unique=true];$galleryImages
			</value>
		</property>
		<property name="impexRow">
			<value>;{+0};;{+1};</value>
		</property>
	</bean>
</beans>