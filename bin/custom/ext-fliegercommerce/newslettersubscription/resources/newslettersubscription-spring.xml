<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
           http://www.springframework.org/schema/aop
           http://www.springframework.org/schema/aop/spring-aop-3.1.xsd">

	<bean id="newsletterSubscriptionData"  class="com.fliegersoftware.newslettersubscription.data.NewsletterSubscriptionData" scope="prototype" />
	<bean id="newsletterSubscriptionModel" class="com.fliegersoftware.newslettersubscription.model.NewsletterSubscriptionModel" scope="prototype" />

	<!-- Facade -->
	<alias name="defaultNewsletterSubscriptionFacade" alias="newsletterSubscriptionFacade" />
	<bean id="defaultNewsletterSubscriptionFacade" class="com.fliegersoftware.newslettersubscription.facades.impl.DefaultNewsletterSubscriptionFacade">
		<property name="newsletterSubscriptionService" ref="newsletterSubscriptionService" />
		<property name="newsletterSubscriptionDataToModelConverter" ref="newsletterSubscriptionDataToModelConverter" />
		<property name="baseStoreService" ref="baseStoreService" />
		<property name="commerceCommonI18NService" ref="commerceCommonI18NService" />
	</bean>


	<!-- Service -->
	<alias name="defaultNewsletterSubscriptionService" alias="newsletterSubscriptionService" />
	<bean id="defaultNewsletterSubscriptionService" class="com.fliegersoftware.newslettersubscription.services.impl.DefaultNewsletterSubscriptionService">
		<property name="newsletterSubscriptionDao" ref="newsletterSubscriptionDao" />
	</bean>


	<!-- DAO -->
	<alias name="defaultNewsletterSubscriptionDao" alias="newsletterSubscriptionDao" />
	<bean id="defaultNewsletterSubscriptionDao" class="com.fliegersoftware.newslettersubscription.dao.impl.DefaultNewsletterSubscriptionDao">
		<property name="flexibleSearchService" ref="flexibleSearchService" />
		<property name="modelService" ref="modelService" />
	</bean>
	
	
	<!-- Populators -->
	<alias name="defaultNewsletterSubscriptionModelToDataPopulator" alias="newsletterSubscriptionModelToDataPopulator" />
	<bean id="defaultNewsletterSubscriptionModelToDataPopulator" class="com.fliegersoftware.newslettersubscription.facades.populators.NewsletterSubscriptionModelToDataPopulator">	
		<property name="subscriptionTypeModelToDataConverter" ref="subscriptionTypeModelToDataConverter" />	
	</bean>
	
	<alias name="defaultNewsletterSubscriptionDataToModelPopulator" alias="newsletterSubscriptionDataToModelPopulator" />
	<bean id="defaultNewsletterSubscriptionDataToModelPopulator" class="com.fliegersoftware.newslettersubscription.facades.populators.NewsletterSubscriptionDataToModelPopulator">
		<property name="baseStoreService" ref="baseStoreService" />
		<property name="commonI18NService" ref="commonI18NService" />
		<property name="userService" ref="userService" />
		<property name="enumerationService" ref="enumerationService" />
	</bean>
	
	<alias name="defaultCustomerNewsletterSubscriptionsPopulator" alias="customerNewsletterSubscriptionsPopulator" />
	<bean id="defaultCustomerNewsletterSubscriptionsPopulator" class="com.fliegersoftware.newslettersubscription.facades.populators.CustomerNewsletterSubscriptionsPopulator" >
		<property name="newsletterSubscriptionModelToDataConverter" ref="newsletterSubscriptionModelToDataConverter" />	
	</bean>
	
	<alias name="defaultSubscriptionTypeModelToDataPopulator" alias="subscriptionTypeModelToDataPopulator" />
	<bean id="defaultSubscriptionTypeModelToDataPopulator" class="com.fliegersoftware.newslettersubscription.facades.populators.SubscriptionTypeModelToDataPopulator" >
		<property name="typeService" ref="typeService" />
	</bean>
	
	<!-- Converters -->
	<alias name="defaultNewsletterSubscriptionDataToModelConverter" alias="newsletterSubscriptionDataToModelConverter" />
	<bean id="defaultNewsletterSubscriptionDataToModelConverter" parent="abstractPopulatingConverter">
		<lookup-method name="createTarget" bean="newsletterSubscriptionModel"/>
		<property name="populators">
			<list>
				<ref bean="newsletterSubscriptionDataToModelPopulator" />
			</list>
		</property>
	</bean>	
	
	<alias name="defaultNewsletterSubscriptionModelToDataConverter" alias="newsletterSubscriptionModelToDataConverter" />
	<bean id="defaultNewsletterSubscriptionModelToDataConverter" parent="abstractPopulatingConverter">
			<lookup-method name="createTarget" bean="newsletterSubscriptionData"/>
			<property name="populators">
			<list>
				<ref bean="newsletterSubscriptionModelToDataPopulator" />
			</list>
		</property>
	</bean>
	
	<bean parent="modifyPopulatorList">
        <property name="list" ref="customerConverter" />
        <property name="add" ref="customerNewsletterSubscriptionsPopulator" />
    </bean>

	<alias name="defaultSubscriptionTypeModelToDataConverter" alias="subscriptionTypeModelToDataConverter" />
	<bean id="defaultSubscriptionTypeModelToDataConverter" parent="abstractPopulatingConverter">
			<lookup-method name="createTarget" bean="subscriptionTypeData"/>
			<property name="populators">
			<list>
				<ref bean="subscriptionTypeModelToDataPopulator" />
			</list>
		</property>
	</bean>

</beans>
