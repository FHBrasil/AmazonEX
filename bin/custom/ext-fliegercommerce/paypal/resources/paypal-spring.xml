<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
           http://www.springframework.org/schema/aop
           http://www.springframework.org/schema/aop/spring-aop-3.1.xsd
 		   http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:component-scan base-package="com.paypal.hybris" scope-resolver="de.hybris.platform.spring.IgnoreTenantScopeMetadataResolver"/>

	<!-- Cart interceptor -->
	<bean id="CartPrepareInterceptorMapping" 
		class="de.hybris.platform.servicelayer.interceptor.impl.InterceptorMapping">
		<property name="interceptor" ref="cartPrepareInterceptor" />
		<property name="typeCode" value="Cart" />
	</bean>


	<!-- Payment implementation -->
	<bean name="paypalCommandFactory"
		class="de.hybris.platform.payment.commands.factory.impl.DefaultCommandFactoryImpl"
		>
		<property name="paymentProvider" value="PayPal" />
		<property name="commands">
			<map>
				<entry>
					<key>
						<value type="java.lang.Class">de.hybris.platform.payment.commands.IsApplicableCommand
						</value>
					</key>
					<bean class="com.paypal.hybris.commands.impl.IsApplicableCommandImpl" />
				</entry>
				<entry>
					<key>
						<value type="java.lang.Class">de.hybris.platform.payment.commands.AuthorizationCommand
						</value>
					</key>
					<bean class="com.paypal.hybris.commands.impl.AuthorizationCommandImpl" />
				</entry>
				<entry>
					<key>
						<value type="java.lang.Class">de.hybris.platform.payment.commands.SubscriptionAuthorizationCommand
						</value>
					</key>
					<bean
						class="com.paypal.hybris.commands.impl.SubscriptionAuthorizationCommandImpl" />
				</entry>
				<entry>
					<key>
						<value type="java.lang.Class">de.hybris.platform.payment.commands.CaptureCommand
						</value>
					</key>
					<bean class="com.paypal.hybris.commands.impl.CaptureCommandImpl" />
				</entry>
				<entry>
					<key>
						<value type="java.lang.Class">de.hybris.platform.payment.commands.PartialCaptureCommand
						</value>
					</key>
					<bean class="com.paypal.hybris.commands.impl.PartialCaptureCommandImpl" />
				</entry>
				<entry>
					<key>
						<value type="java.lang.Class">de.hybris.platform.payment.commands.EnrollmentCheckCommand
						</value>
					</key>
					<bean class="com.paypal.hybris.commands.impl.EnrollmentCheckCommandImpl" />
				</entry>
				<entry>
					<key>
						<value type="java.lang.Class">de.hybris.platform.payment.commands.VoidCommand
						</value>
					</key>
					<bean class="com.paypal.hybris.commands.impl.VoidCommandImpl" />
				</entry>
				<entry>
					<key>
						<value type="java.lang.Class">de.hybris.platform.payment.commands.FollowOnRefundCommand
						</value>
					</key>
					<bean class="com.paypal.hybris.commands.impl.FollowOnRefundCommandImpl" />
				</entry>
				<entry>
					<key>
						<value type="java.lang.Class">de.hybris.platform.payment.commands.StandaloneRefundCommand
						</value>
					</key>
					<bean class="com.paypal.hybris.commands.impl.StandaloneRefundCommandImpl" />
				</entry>

				<entry>
					<key>
						<value type="java.lang.Class">de.hybris.platform.payment.commands.CreateSubscriptionCommand
						</value>
					</key>
					<bean
						class="com.paypal.hybris.commands.impl.CreateSubscriptionCommandImpl" />
				</entry>
				<entry>
					<key>
						<value type="java.lang.Class">de.hybris.platform.payment.commands.DeleteSubscriptionCommand
						</value>
					</key>
					<bean
						class="com.paypal.hybris.commands.impl.DeleteSubscriptionCommandImpl" />
				</entry>
				<entry>
					<key>
						<value type="java.lang.Class">de.hybris.platform.payment.commands.GetSubscriptionDataCommand
						</value>
					</key>
					<bean
						class="com.paypal.hybris.commands.impl.GetSubscriptionDataCommandImpl" />
				</entry>
				<entry>
					<key>
						<value type="java.lang.Class">de.hybris.platform.payment.commands.UpdateSubscriptionCommand
						</value>
					</key>
					<bean
						class="com.paypal.hybris.commands.impl.UpdateSubscriptionCommandImpl" />
				</entry>
			</map>
		</property>
	</bean>
	
	<bean id="expressCheckoutParams" scope="prototype" class="com.paypal.hybris.soap.params.impl.SetExpressCheckoutParams" />

	<alias name="defaultPaypalConfigPropertyDao" alias="paypalConfigPropertyDao"/>
	<bean name="defaultPaypalConfigPropertyDao" class="com.paypal.hybris.dao.impl.DefaultPaypalConfigPropertyDao" parent="abstractItemDao" />

	<alias name="defaultPaypalConfigManager" alias="paypalConfigManager"/>
	<bean name="defaultPaypalConfigManager" class="com.paypal.hybris.config.PaypalConfigManager"/>
	
	<alias name="defaultPaypalFacade" alias="paypalFacade"/>
	<bean name="defaultPaypalFacade" class="com.paypal.hybris.facades.PaypalFacade">
		<lookup-method name="createExpressCheckoutParams" bean="expressCheckoutParams"/>
	</bean>
</beans>