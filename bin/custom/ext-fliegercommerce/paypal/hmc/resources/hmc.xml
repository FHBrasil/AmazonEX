<configuration xmlns="hybris.de/schemas/hmc/generic"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="hybris.de/schemas/hmc/generic hmc.xsd">


	<!-- Configuration for extension paypal -->

	<explorertree>
		<group name="paypalgroup">
			<typeref type="PaypalOperation" />
			<typeref type="PaypalConfigProperty" />
			<!-- <externalnode classname="com.hybris.paypal.hmc.PaypalTreeLeafChip"/> -->
		</group>
	</explorertree>

	<type name="PaypalOperation" mode="append">
		<organizer>
			<search mode="replace">
				<condition attribute="creationtime" />
				<condition attribute="operationName" />
				<condition attribute="request" />
				<condition attribute="response" />
			</search>
			<result>
				<listview mode="replace">
					<itemlayout>
						<attribute name="creationtime" />
						<attribute name="operationName" />
						<attribute name="request" />
						<attribute name="response" />
					</itemlayout>
				</listview>
			</result>
			<editor>
				<essentials>
					<listlayout>
						<attribute name="creationtime" />
						<attribute name="operationName" />
					</listlayout>
				</essentials>
				<tab name="tab.paypalgroup">
					<section name="section.paypalgroup">
						<listlayout>
							<attribute name="request" />
							<attribute name="response" />
						</listlayout>
					</section>
				</tab>
			</editor>
		</organizer>
	</type>

	<type name="PaypalConfigProperty" mode="append">
		<organizer>
			<search mode="replace">
				<condition attribute="key" />
				<condition attribute="value" />
			</search>
			<result>
				<listview mode="replace">
					<itemlayout>
						<attribute name="key" />
						<attribute name="value" />
					</itemlayout>
				</listview>
			</result>
			<editor>
				<essentials>
					<listlayout>
						<attribute name="key" />
					</listlayout>
				</essentials>
				<tab name="tab.paypalgroup">
					<section name="section.paypalgroup">
						<listlayout>
							<attribute name="value" />
						</listlayout>
					</section>
				</tab>
			</editor>
		</organizer>
	</type>
</configuration>