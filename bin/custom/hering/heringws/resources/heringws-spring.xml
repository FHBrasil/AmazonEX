<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
           http://www.springframework.org/schema/aop
           http://www.springframework.org/schema/aop/spring-aop-3.1.xsd
           http://www.springframework.org/schema/context 
           http://www.springframework.org/schema/context/spring-context-3.1.xsd">


	<bean id="marshallerHeringWs" class="org.springframework.oxm.jaxb.Jaxb2Marshaller">
	    <property name="packagesToScan" value="br.hering.webservices.*"/>
	</bean> 

	<bean id="messageSenderHeringWs" class="org.springframework.ws.transport.http.CommonsHttpMessageSender">
	     <property name="credentials">
	        <bean class="org.apache.commons.httpclient.UsernamePasswordCredentials">
	            <constructor-arg value="hybris"/>
	            <constructor-arg value="hybris"/>
	        </bean>
	    </property>
    </bean>
	
    <bean id="abstractWSTemplateHeringWs" class="org.springframework.ws.client.core.WebServiceTemplate">
  		<property name="marshaller" ref="marshallerHeringWs" />
	    <property name="unmarshaller" ref="marshallerHeringWs" />
	    <property name="messageSender" ref="messageSenderHeringWs" />
    </bean>
    
	<bean id="enviarResultadoTransacaoWSTemplate" parent="abstractWSTemplateHeringWs" />

</beans>