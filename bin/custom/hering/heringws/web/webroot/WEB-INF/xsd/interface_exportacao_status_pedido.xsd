<?xml version="1.0" encoding="UTF-8"?>
<xs:schema
	xmlns:xs="http://www.w3.org/2001/XMLSchema" 
	elementFormDefault="qualified" 
	attributeFormDefault="qualified" 
	targetNamespace="http://hering.fliegersoftware.de/interface/soap/" 
	xmlns:h="http://hering.fliegersoftware.de/interface/soap/">
	<xs:element name="statusPedidoRequest">
		<xs:complexType>
			<xs:sequence>
				<xs:element maxOccurs="unbounded" ref="h:statusPedido"/>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
	<xs:element name="statusPedido">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="codigoSite">
					<xs:annotation>
						<xs:documentation>PK- Codigo do Ecommerce</xs:documentation>
					</xs:annotation>
					<xs:simpleType>
						<xs:restriction base="xs:string">
							<xs:maxLength value="6"/>
						</xs:restriction>
					</xs:simpleType>
				</xs:element>
				<xs:element name="codigoPedido">
					<xs:annotation>
						<xs:documentation>PK- Numero pedido Hybris</xs:documentation>
					</xs:annotation>
					<xs:simpleType>
						<xs:restriction base="xs:string">
							<xs:maxLength value="20"/>
						</xs:restriction>
					</xs:simpleType>
				</xs:element>
				<xs:element name="status">
					<xs:annotation>
						<xs:documentation>Informa o status do pedido</xs:documentation>
					</xs:annotation>
					<xs:simpleType>
						<xs:restriction base="xs:string">
							<xs:maxLength value="1"/>
						</xs:restriction>
					</xs:simpleType>
				</xs:element>
				<xs:element name="motivoCancelamento" type="xs:int">
					<xs:annotation>
						<xs:documentation>Motivo para o cancelamento</xs:documentation>
					</xs:annotation>
				</xs:element>
				<xs:element name="data">
					<xs:annotation>
						<xs:documentation>Data e hora do Status</xs:documentation>
					</xs:annotation>
					<xs:simpleType>
						<xs:restriction base="xs:string">
							<xs:minLength value="19"/>
							<xs:maxLength value="19"/>
						</xs:restriction>
					</xs:simpleType>
				</xs:element>
				<xs:element name="usuario">
					<xs:annotation>
						<xs:documentation>Usuário ou aplicação  </xs:documentation>
					</xs:annotation>
					<xs:simpleType>
						<xs:restriction base="xs:string">
							<xs:maxLength value="25"/>
						</xs:restriction>
					</xs:simpleType>
				</xs:element>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
</xs:schema>
