<beans xmlns="http://www.springframework.org/schema/beans"

	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd
        ">

	<context:component-scan base-package="br.hering.checkout.controllers"
		scope-resolver="de.hybris.platform.spring.IgnoreTenantScopeMetadataResolver" />
	
	<bean name="heringPaymentDetailsValidator" class="br.hering.heringstorefrontcommons.validation.HeringPaymentDetailsValidator"></bean>
	
 	<bean name="multiStepCheckoutController"
		class="br.hering.checkout.controllers.pages.HeringMultiStepCheckoutController">
		<property name="sessionService" ref="sessionService" />
		<property name="heringPaymentDetailsValidator" ref="heringPaymentDetailsValidator"/>
	</bean>
	
	<bean name="singleStepCheckoutController"
		class="br.hering.checkout.controllers.pages.HeringSingleStepCheckoutController">
		<property name="sessionService" ref="sessionService" />
		<property name="heringPaymentDetailsValidator" ref="heringPaymentDetailsValidator"/>
        <property name="paypalPaymentRequestController" ref="paypalPaymentRequestController" />
	</bean>
		
	<bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="mappings">
			<props>
				<prop key="/checkout/single">singleStepCheckoutController</prop>
				<prop key="/checkout/multi">multiStepCheckoutController</prop>
			</props>
		</property>
	</bean>
	
	
</beans>