	<queryString>
		<![CDATA[SELECT DISTINCT {o:pk} AS orderPk
     , {o:totalPrice} AS orderAmount
     , {c:name} AS customerName
     , {c:cpfcnpj} AS customerCPfCnpj
     , {pm.code} AS paymentMode
     , {o:creationTime} AS orderFullDate
FROM {
      Order AS o
      JOIN Customer AS c ON {c:pk} = {o:user}
      JOIN PrincipalGroup AS g ON {g:uid} = 'ADMINISTRATIVO'
                                  OR {g:uid} = 'PRODUTIVO'
      JOIN PrincipalGroupRelation AS gr ON {gr:source} = {c:PK}
                                           AND {gr:target} = {g:PK}
      JOIN PaymentMode AS pm ON {pm:pk} = {o:paymentMode}
     }
WHERE {o:creationTime} >= TRUNC(SYSDATE - 15)
ORDER BY {o:creationTime}]]>
