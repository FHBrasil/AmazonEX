<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- accelerator Image Format Mappings -->
	<alias name="acceleratorImageFormatMapping" alias="imageFormatMapping"/>
	<bean id="acceleratorImageFormatMapping" parent="defaultImageFormatMapping">
		<property name="mapping">
			<map>
				<entry key="superZoom" value="1200Wx1200H"/>
				<entry key="zoom" value="539Wx539H"/>
				<entry key="product" value="190Wx190H"/>
				<entry key="store" value="190Wx190H"/>
				<entry key="cartIcon" value="85Wx85H"/>
				<entry key="thumbnail" value="60Wx60H"/>
			</map>
		</property>
	</bean>

	<alias name="acceleratorProductPrimaryImagePopulator" alias="productPrimaryImagePopulator" />
	<bean id="acceleratorProductPrimaryImagePopulator" parent="defaultProductPrimaryImagePopulator">
		<property name="imageFormats">
			<list>
                <value>superZoom</value>
				<value>zoom</value>
				<value>product</value>
				<value>thumbnail</value>
				<value>cartIcon</value>
			</list>
		</property>
	</bean>

	<alias name="acceleratorProductGalleryImagesPopulator" alias="productGalleryImagesPopulator" />
	<bean id="acceleratorProductGalleryImagesPopulator" parent="defaultProductGalleryImagesPopulator">
		<property name="imageFormats">
			<list>
				<value>superZoom</value>
				<value>zoom</value>
				<value>product</value>
				<value>thumbnail</value>
			</list>
		</property>
	</bean>

	
	<alias name="kpProductFacade" alias="kpProductFacade"/>
	<bean id="kpProductFacade" class="de.kpfamily.facades.impl.DefaultKPProductFacade"
	       parent="accProductFacade">
       <property name="productConfiguredPopulator" ref="defaultKPProductPopulator"/>
	</bean>
	
	<bean id="defaultKPProductPopulator" parent="defaultProductConfiguredPopulator"
	       class="de.kpfamily.facades.populators.DefaultKPProductPopulator"/>
	
</beans>
