<?xml version="1.0" encoding="ISO-8859-1"?>
<configuration xmlns="hybris.de/schemas/hmc/generic"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="hybris.de/schemas/hmc/generic hmc.xsd">
    <explorertree>
        <group name="kpfamilygroup">
            <typeref type="ProductCode" description="typeref.productCode.description"
                position="0" />
        </group>
    </explorertree>
    <type name="ProductCode">
        <organizer>
            <search>
                <!-- <condition attribute="year" /> -->
                <!-- <condition attribute="counter" /> -->
                <condition attribute="ean" />
                <condition attribute="name" />
                <condition attribute="code" />
            </search>
            <result>
                <listview>
                    <itemlayout>
                        <attribute name="code" width="150" />
                        <attribute name="ean" width="150" />
                        <attribute name="name" width="350" />
                        <!-- <attribute name="year" width="150" /> -->
                        <!-- <attribute name="counter" width="150" /> -->
                    </itemlayout>
                </listview>
            </result>
            <editor>
                <tab name="properties">
                    <section name="common">
                        <listlayout>
                            <!-- <attribute editable="false" name="year" /> -->
                            <!-- <attribute editable="false" name="counter" /> -->
                            <attribute maxlength="13" name="ean" />
                            <attribute maxlength="50" name="name" />
                            <attribute editable="false" name="code" />
                        </listlayout>
                    </section>
                </tab>
            </editor>
        </organizer>
    </type>
</configuration>