	</bean>

	<bean id="babyartikelCategoryCodeValueProvider" parent="abstractCategoryCodeValueProvider">
		<property name="categorySource" ref="babyartikelCategorySource"/>
	</bean>
	<bean id="babyartikelBrandCategoryCodeValueProvider" parent="abstractCategoryCodeValueProvider">
