<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- Spring Integration -->
	<import resource="classpath:/kpfamilycore/integration/hot-folder-common-spring.xml"/>

	<!-- SystemSetup for the KpfamilyCore -->
	<bean id="acceleratorCoreSystemSetup" class="de.kpfamily.core.setup.CoreSystemSetup"
	       parent="abstractCoreSystemSetup"/>

	<!-- Solr field value providers -->

