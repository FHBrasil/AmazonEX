	</bean>
	<bean id="babyartikelCategoryNameValueProvider" parent="abstractCategoryNameValueProvider">
		<property name="categorySource" ref="babyartikelCategorySource"/>
	</bean>
	<bean id="babyartikelBrandCategoryNameValueProvider" parent="abstractCategoryNameValueProvider">
