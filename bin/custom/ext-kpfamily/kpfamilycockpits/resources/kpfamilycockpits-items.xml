<items xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="items.xsd">
    
    <itemtypes>
        <itemtype code="KPFamilyDivImageComponent" autocreate="true" generate="true"
                extends="CMSParagraphComponent">
            <attributes>
                <attribute qualifier="image" type="localized:Media">
                    <persistence type="property"/>
                    <description>
                        Attribute that stores the localized media of the paragraph
                    </description>
                </attribute>
                <attribute qualifier="cssClass" type="java.lang.String">
                    <persistence type="property"/>
                </attribute>
                <attribute qualifier="title" type="java.lang.String">
                    <persistence type="property"/>
                </attribute>
                <attribute qualifier="text" type="java.lang.String">
                    <persistence type="property"/>
                </attribute>
                <attribute qualifier="hyperlink" type="java.lang.String">
                    <persistence type="property"/>
                </attribute>
            </attributes>
        </itemtype>
    </itemtypes>        

</items>